<UserControl x:Class="kck_projekt2.AddNotePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"

             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"      
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             Background="{DynamicResource MaterialDesignPaper}"
             FontFamily="{DynamicResource MaterialDesignFont}"
             >

    <Grid>

        <StackPanel HorizontalAlignment="Center">
            <TextBlock
                Padding="0,16"
                VerticalAlignment="Top"
                TextAlignment="Center"
                Style="{StaticResource MaterialDesignDisplayLargeTextBlock}"
                Text="Add Note" Margin="0,20,0,0" />

            <Label Name="errorMessage" Visibility="Visible" Content="" Foreground="#FFFF0000" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <TextBox Name="Title" materialDesign:HintAssist.HelperText="Enter note title"  
                     materialDesign:HintAssist.Hint="Title" Width="200" Height="30" Margin="0,20,0,0"
                     />


            <StackPanel Orientation="Horizontal">
                <TextBox Name="CustomCategory" materialDesign:HintAssist.HelperText="Enter custom category"  
                     materialDesign:HintAssist.Hint="Custom category" Width="180" Height="30" Margin="20,20,0,0"
                     IsEnabled="{Binding Path=IsChecked, ElementName=MaterialDesignFilledTextBoxEnabledComboBox}"
                     />
                <CheckBox HorizontalAlignment="Center" x:Name="MaterialDesignFilledTextBoxEnabledComboBox" FontSize="10" Margin="0,20,0,0" Checked="MaterialDesignFilledTextBoxEnabledComboBox_Checked"/>
            </StackPanel>

            <TextBox 
            x:Name="NoteContent" 
            AcceptsReturn="True"
                VerticalScrollBarVisibility="Auto"
                HorizontalScrollBarVisibility="Auto"
                TextWrapping="Wrap"
                FontSize="12" 
                Height="100"
                Width="200"
                Margin="20,20,20,0"
                materialDesign:HintAssist.Hint="Note content"
                materialDesign:HintAssist.HelperText="Enter your note content"  
                />

                <materialDesign:Card Name="Loading" Visibility="Hidden" Padding="4" UniformCornerRadius="14" Width="28">
                <ProgressBar IsIndeterminate="True" Style="{StaticResource MaterialDesignCircularProgressBar}" Value="50" />
            </materialDesign:Card>
            <Button Name="AddNoteButton" Content="Add Note" Width="90" Height="30" Margin="0,20,0,0" Click="AddNoteClick"/>
            <Button Content="Back" Width="70" Height="30" Margin="0,20,0,0" Click="BackClick" Background="#FF1A237E" BorderBrush="#FF1A237E"/>
            <materialDesign:DialogHost Content="DialogHost" Height="2" Width="22"/>
        </StackPanel>
    </Grid>

</UserControl>