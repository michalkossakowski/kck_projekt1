<UserControl x:Class="kck_projekt2.AddNotePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"      
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             Background="{DynamicResource MaterialDesignPaper}"
             FontFamily="{DynamicResource MaterialDesignFont}">

    <Grid>

        <StackPanel HorizontalAlignment="Center">
            <TextBlock
                VerticalAlignment="Top"
                TextAlignment="Center"
                Style="{StaticResource MaterialDesignDisplayLargeTextBlock}"
                Text="Add Note" 
                Margin="0,20,0,20"
                Foreground="#3f51b5" />

            <TextBox 
                Name="Title" 
                materialDesign:HintAssist.HelperText="Enter note title"  
                materialDesign:HintAssist.Hint="Title" 
                Width="200" Height="30" Margin="0,0,0,0"
                Foreground="Black"
                TextChanged="Title_TextChanged" />

            <ComboBox
                x:Name="SelectedCategory"
                Width="200"
                Height="25"
                Margin="0,25,0,0"
                Padding="5"
                Background="LightGray"
                materialDesign:HintAssist.Hint="Category"
                IsEnabled="True"
                Foreground="Black"
                materialDesign:HintAssist.HelperText="Select category"  
                SelectionChanged="SelectedCategory_SelectionChanged">

                <ComboBoxItem Content="Studies"/>
                <ComboBoxItem Content="Work"/>
                <ComboBoxItem Content="Home"/>
                <ComboBoxItem Content="Hobby"/>
                <ComboBoxItem Content="Other"/>

            </ComboBox>

            <StackPanel  Orientation="Horizontal" Margin="-50,20,0,0" HorizontalAlignment="Center">
                <ToggleButton
                    x:Name="CategoryToggle" 
                    IsChecked="False"
                    Click="CategoryToggleClick">
                    <ToggleButton.LayoutTransform>
                        <ScaleTransform ScaleX="0.5" ScaleY="0.5" />
                    </ToggleButton.LayoutTransform>
                </ToggleButton>

                <TextBlock
                    Margin="5,0,0,0"
                    Text="Use custom category"
                    Foreground="gray"
                    VerticalAlignment="Center"/>
            </StackPanel>

            <TextBox 
                Name="CustomCategory" 
                materialDesign:HintAssist.HelperText="Enter custom category"  
                materialDesign:HintAssist.Hint="Custom category" 
                Width="200" Height="30" Margin="0,0,0,0"
                IsEnabled="False"
                Foreground="Black"
                TextChanged="CustomCategory_TextChanged"/>

            <TextBox
                Name="NoteContent"
                Foreground="Black"
                Height="200"
                materialDesign:HintAssist.Hint="Write note here ..."
                AcceptsReturn="True"
                Margin="20,30,20,20"
                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                TextWrapping="Wrap"
                VerticalScrollBarVisibility="Auto" 
                Width="300"
                TextChanged="NoteContent_TextChanged"/>

            <Button 
                Name="AddNoteButton" 
                Content="Add Note" 
                Width="90" Height="30" Margin="0,0,0,0" 
                Click="AddNoteClick"/>

            <Button 
                Content="Back" 
                Width="70" Height="30" Margin="0,20,0,0" 
                Click="BackClick" 
                Background="MidnightBlue" BorderBrush="MidnightBlue"/>

        </StackPanel>
    </Grid>

</UserControl>
