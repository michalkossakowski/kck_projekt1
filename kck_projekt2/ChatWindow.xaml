<Window x:Class="kck_projekt2.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"    
        Title="Ask AI"
        MinHeight="500" 
        MinWidth="400"
        Height="500"
        Width="400"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}">


    <Grid>
        <materialDesign:Card Name="Loading" 
                             Panel.ZIndex="10"
                             Visibility="Collapsed" 
                             Padding="5" 
                             UniformCornerRadius="30" 
                             Width="30"
                             Height="30"
                             Margin="0,250,0,0"
                             VerticalAlignment="Top"
                             Background="{DynamicResource MaterialDesign.Brush.Primary}"
                             >

            <ProgressBar IsIndeterminate="True" 
                         Style="{StaticResource MaterialDesignCircularProgressBar}" 
                         Value="70" 
                         Height="20"
                         Width="20"
                         Foreground="White"
                         />

        </materialDesign:Card>

        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,0">
                <materialDesign:PackIcon 
                    Kind="Sparkles" 
                    Foreground="{DynamicResource TextBlockColor}"
                    Width="25" 
                    Height="25" 
                    Margin="0,0,5,0" 
                    VerticalAlignment="Center"/>

                <TextBlock
                    Grid.Row="0"                 
                    TextAlignment="Center"
                    Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                    Text="Ask AI about anything" 
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"/>
            </StackPanel>

            

            
            <!-- ChatContent -->
            <TextBox
                Grid.Row="1"
                Name="PromptTextBox"
                Foreground="{DynamicResource TextBoxColor}"
                materialDesign:HintAssist.Hint="Write question here ..."
                materialDesign:HintAssist.HelperText="Enter your question for AI"  
                materialDesign:HintAssist.HelperTextFontSize="12"
                FontSize="14"
                AcceptsReturn="True"
                Margin="10,10,10,10"
                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                TextWrapping="Wrap"
                VerticalScrollBarVisibility="Auto" 
                VerticalAlignment="Stretch"
                HorizontalAlignment="Stretch"

                MinHeight="100"
                TextChanged="ChatContent_TextChanged"
                />


            <Border Grid.Row="2"
                BorderBrush="{DynamicResource LightColor}"
                BorderThickness="1"
                CornerRadius="4"
                Margin="10,20,10,10"
                Padding="8">
                <ScrollViewer VerticalScrollBarVisibility="Auto" 
                          HorizontalScrollBarVisibility="Disabled">
                    <TextBlock x:Name="ResponseTextBlock" 
                           TextWrapping="Wrap" 
                           VerticalAlignment="Top"
                           FontSize="14"
                           Text="Place for AI response ..." 
                         />
                </ScrollViewer>
            </Border>

            <Button 
                Grid.Row="3"
                Name="SubmitButton" 
                Content="Ask AI" 
                Width="100" 
                Height="30" 
                Margin="0,0,0,0" 
                Click="SubmitButton_Click"
                FontSize="16"/>

        </Grid>
    </Grid>
</Window>