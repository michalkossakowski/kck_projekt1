<UserControl x:Class="kck_projekt2.ActionMenuPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"      
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             Background="{DynamicResource MaterialDesignPaper}"
             FontFamily="{DynamicResource MaterialDesignFont}"
             >

    <Grid>
        <StackPanel HorizontalAlignment="Center">

            <TextBlock Text="Menu" 
                VerticalAlignment="Top"
                TextAlignment="Center"
                Style="{StaticResource MaterialDesignDisplayLargeTextBlock}"
                Foreground="{DynamicResource TextBlockColor}"
                Margin="0,20,0,20"
                />

            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,20,0,0">
                    <Button Width="180" Height="30" Click="OpenAddNotePage" FontSize="16">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="PencilPlusOutline" Foreground="white" Width="20" Height="20" Margin="0,0,5,0"/>
                            <TextBlock Text="Add Note" Foreground="white" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,20,0,0">
                    <Button Width="180" Height="30" Click="OpenLatestNotesPage" FontSize="16">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="NoteMultipleOutline" Foreground="white" Width="20" Height="20" Margin="0,0,5,0"/>
                            <TextBlock Text="Latest notes" Foreground="white" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,20,0,0">
                    <Button Width="180" Height="30" Click="OpenCalendarPage" FontSize="16">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="Calendar" Foreground="white" Width="20" Height="20" Margin="0,0,5,0"/>
                            <TextBlock Text="Calendar" Foreground="white" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,20,0,0">
                    <Button Width="180" Height="30" Click="OpenExploreNotesPage" FontSize="16">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="FolderSearchOutline" Foreground="white" Width="20" Height="20" Margin="0,0,5,0"/>
                            <TextBlock Text="Explore all notes" Foreground="white" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,20,0,0">
                    <Button Width="180" Height="30" Click="OpenSearchPage" FontSize="16">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="Magnify" Foreground="white" Width="20" Height="20" Margin="0,0,5,0"/>
                            <TextBlock Text="Search" Foreground="white" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,20,0,0">
                    <Button Width="180" Height="30" Click="OpenCalendarPage" FontSize="16">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="CalendarSearch" Foreground="white" Width="20" Height="20" Margin="0,0,5,0"/>
                            <TextBlock Text="Find by date" Foreground="white" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,20,0,0">
                    <Button Width="180" Height="30" Click="OpenCalendarPage" FontSize="16">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="ShapePlusOutline" Foreground="white" Width="20" Height="20" Margin="0,0,5,0"/>
                            <TextBlock Text="Find by category" Foreground="white" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,20,0,0">
                    <Button Width="180" Height="30" Click="OpenCalendarPage" FontSize="16">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="CalendarMonth" Foreground="white" Width="20" Height="20" Margin="0,0,5,0"/>
                            <TextBlock Text="Explore by month" Foreground="white" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

            </StackPanel>
        </StackPanel>
    </Grid>
    
</UserControl>